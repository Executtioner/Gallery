{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block content %}
{% if app.user.isActive != false %}
    <div class="container">
    <h1>Post index</h1>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Imagen</th>
                <th>Miniatura</th>
                <th>Descripcion</th>
                <th>Usuario</th>
                <th>Fecha de Publicacion</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.idPost }}</td>
                <td>{{ post.titulo }}</td>
                <td><img class="" src="{{ asset('upload/') | imagine_filter('thumbnail') ~ post.imagen }}"> </td>
                <td>{{ post.miniatura }}</td>
                <td>{{ post.descripcion }}</td>
                <td>{{ post.idUser }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('post_show', {'idPost': post.idPost}) }}">Ver</a>
                    <a href="{{ path('post_edit', {'idPost': post.idPost}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    {% endif %}
{% endblock %}
