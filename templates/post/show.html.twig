{% extends 'base.html.twig' %}

{% block title %}Publicacion{% endblock %}

{% block content %}
    <div class="container">
    <h1>Publicacion: {{ post.titulo }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id Post</th>
                <td>{{ post.idPost }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td><img src="{{ asset('upload/') | imagine_filter('thumbnail') ~ post.imagen }}"></td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ post.descripcion }}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{{ post.idUser }}</td>
            </tr>
            <tr>
                <th>Fecha de Publicacion</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-warning" href="{{ path('post_edit', {'idPost': post.idPost}) }}">edit</a>
    </br>
    {{ include('post/_delete_form.html.twig') }}
    </div>
{% endblock %}
